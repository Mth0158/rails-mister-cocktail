
    <h2>Details of the cocktail you ordered</h2>

    <%= link_to "Back to list", cocktails_path %>

    <p>Name: <%= @cocktail.name %> </p>
    <p>Ingredients:</p>
    <ul class="list-group">
        <% @cocktail.doses.each do |dose| %>
        <li class="list-group-item"> 
            <%= dose.description %> of <%= dose.ingredient.name %> 
            <%= link_to "Delete",
                        dose_path(dose),
                        method: :delete,
                        data: { confirm: "Are you sure?" } %>

        </li>
        <% end %>
    </ul>
    <%= link_to "Add a new ingredient", new_cocktail_dose_path(@cocktail) %>